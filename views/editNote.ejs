<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('inc/head') %>
  <title>Edit Note</title>
</head>

<body>
  <header>
    <a title="Click to go back to home page" href="/notes">
      <button>Home Page</button>
    </a>

    <a title="Click to go back" href="/notes/<%= note._id %>">
      <button>Cancel</button>
    </a>
  </header>

  <hr>
  
  <div class="page-content">
    <h1>Edit Note</h1>

    <%- include('inc/form-error.ejs') %>

    <form class="full-width" action="/notes/<%= note._id %>/update" method="POST">
      <label for="title">Title</label>
      <input class="form-separated" type="text" id="title" name="title" autofocus value="<%= note.title %>"/>

      <label for="content">Content</label>
      <textarea class="form-separated" name="content" id="content" cols="30" rows="15"><%= note.content %></textarea>

      <button class="form-separated" title="Click to save this note" type="submit" id="submitButton">Save Note</button>
    </form>
  </div>

  <%- include('inc/footer') %>
</body>

</html>